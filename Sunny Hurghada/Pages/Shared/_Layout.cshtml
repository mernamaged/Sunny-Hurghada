	<div class="header header-light">
		<div class="container">
			<nav id="navigation" class="navigation navigation-landscape">
				<div class="nav-header">
					<a class="nav-brand" href="#">
						<img src="img/logo.svg" width="150" class="logo" alt="" />
					</a>
					<div class="nav-toggle"></div>
				</div>
				<div class="nav-menus-wrapper" style="transition-property: none;">
					<ul class="nav-menu">
						<li>
							<a href="/">Home</a>                                 
						</li>

						<li><a href="JavaScript:Void(0);">Tours<span class="submenu-indicator"></span></a>
							<ul class="nav-dropdown nav-submenu">
								@foreach (var tourType in tourTypes ){
									<li><a asp-page="/Listing" asp-route-name="@tourType.TourTypeLocalizeds.First().Name" asp-route-id="@tourType.Id">@tourType.TourTypeLocalizeds.First().Name</a></li>
								}								
							</ul>
						</li>

						<li><a href="JavaScript:Void(0);">Destinations<span class="submenu-indicator"></span></a>
							<ul class="nav-dropdown nav-submenu">
								@foreach (var destination in destinations ) {
									<li><a asp-page="/listing"  asp-route-name="@destination" asp-route-id="@destination">@destination</a></li>
								}							
									</ul>
								</li>
								
								<li>
									<a asp-page="/transfer">Transfer</a>                                 
								</li>
								
								<li>
									<a asp-page="/contact">Contact Us</a>                                 
								</li>
								
							</ul>
						</div>
					</nav>
				</div>
			</div>
			<!-- End Navigation -->
		  @RenderBody()
	
